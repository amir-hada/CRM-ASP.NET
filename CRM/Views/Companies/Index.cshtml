        @for (int i = 5; i < 9; i++)
        {
            @if (ViewBag.data[i] != null)
            {
            <label>
                <input type="checkbox" name="selected" value="@i" />
                <span>@ViewBag.data[i]</span>
            </label>
            }
        }
    </ul>
    <ul>
