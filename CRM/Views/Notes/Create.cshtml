@model CRM.Models.Note

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Content" class="control-label"></label>
        <input type="text" asp-for="Content" class="form-control" />*@
                <div class="input-group-prepend">
                    <span class="input-group-text">Content</span>
                </div>
                <textarea asp-for="Content" class="form-control" aria-label="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <select asp-for="CompanyId" class="form-control">
                    @foreach (var item in ViewBag.data)
                    {
                        @if (item.Name == ViewBag.name)
                        {
                            <option selected value="@Convert.ToUInt32(item.Id)">@item.Name</option>
                        }
                        else
                        { 
                            <option value="@Convert.ToUInt32(item.Id)">@item.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="UserId" class="control-label"></label>*@
                <input hidden asp-for="UserId" class="form-control" value="@ViewBag.user" readonly/>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Back to List Of Notes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
