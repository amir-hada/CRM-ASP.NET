@model IEnumerable<CRM.Models.Company>

@{ ViewData["Title"] = "List"; }

<h1>List of @ViewBag.Message</h1>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List of Companies</a>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NIP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    @*<td>
        <a asp-controller="Users" asp-action="Details" asp-route-id="@item.UserId">@Html.DisplayFor(modelItem => item.UserId)</a>
    </td>*@
    <td>
        @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
        <a asp-controller="Companies" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
        @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
    </td>
</tr>}
    </tbody>
</table>
